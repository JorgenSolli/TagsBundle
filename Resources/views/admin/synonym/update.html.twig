{% extends eztags_admin.pageLayoutTemplate %}

{% trans_default_domain 'eztags_admin' %}

{% form_theme form 'NetgenTagsBundle:form:eztags.html.twig' %}

{% block content %}
    {# Show form for updating a synonym. #}
    <h2 class="tag-title">{{ 'synonym.edit.title'|trans }}: {{ netgen_tags_tag_keyword(tag) }} [{{ tag.id }}]</h2>

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <input class="tags-btn tags-btn-primary" type="submit"/>
    {{ form_end(form) }}
{% endblock %}
