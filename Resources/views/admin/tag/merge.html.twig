{% extends eztags_admin.pageLayoutTemplate %}

{% trans_default_domain 'eztags_admin' %}

{% form_theme form 'NetgenTagsBundle:form:eztags.html.twig' %}

{% block content %}
    {# Show form for merging two tags. #}
    <h2 class="tag-title">{{ 'tag.merge.title'|trans }}: {{ netgen_tags_tag_keyword(tag) }} [{{ tag.id }}]</h2>

    <p>{{ 'tag.merge.message'|trans }}</p>

    {{ form_start(form) }}

    {{ form_errors(form) }}
    {{ form_row(form.mainTag) }}

    <div class="tags-actions">
        <button type="submit" class="tags-btn tags-btn-primary">{{ 'tag.button.save'|trans }}</button>
        <a href="{{ path('netgen_tags_admin_tag_show', {'tagId': tag.id}) }}" class="tags-btn">{{ 'tag.button.discard'|trans }}</a>
    </div>
    {{ form_end(form) }}
{% endblock %}
