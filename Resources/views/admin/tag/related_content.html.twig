{% extends eztags_admin.pageLayoutTemplate %}

{% trans_default_domain 'eztags_admin' %}

{% set tag_keyword = netgen_tags_tag_keyword( tag ) %}

{% block content %}
    <h2 class="tag-title">
        {{ 'tag.related_content.title'|trans }}: {{ netgen_tags_tag_keyword(tag) }}
    </h2>

    {% if related_content|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>{{ 'tag.table.tag_id'|trans }}</th>
                    <th>{{ 'tag.table.tag_name'|trans }}</th>
                    <th>{{ 'tag.table.modified'|trans }}</th>
                    <th>{{ 'tag.content_type.name'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for content in related_content %}
                    <tr>
                        <td>{{ content.contentInfo.id }}</td>
                        <td><a href="{{ path( "ez_urlalias", {"contentId": content.contentInfo.id} ) }}">{{ ez_content_name(content) }}</a></td>
                        <td>{{ content.contentInfo.modificationDate|date }}</td>
                        <td>{{ netgen_tags_content_type_name(content.contentInfo.contentTypeId) }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {% if related_content.haveToPaginate() %}
            <div class="pagination-centered">
                {{ pagerfanta( related_content ) }}
            </div>
        {% endif %}
    {% endif %}
{% endblock %}
