{% trans_default_domain 'eztags_admin' %}

{# Show translations of a tag or synonym with form for deleting translation, seting as main and updating AlwaysAvailable property of a tag or synonym. #}
<form method="post" action="{{ path('netgen_tags_admin_tag_translation', {'tagId': tag.id}) }}">
    <table>
        <thead>
        <tr>
            <th></th>
            <th>{{ 'tag.translations.langunage'|trans }}</th>
            <th>{{ 'tag.translations.translation'|trans }}</th>
            <th>{{ 'tag.translations.locale'|trans }}</th>
            <th>{{ 'tag.main'|trans }}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for languageCode, keyword in tag.keywords %}
            <tr>
                <td><input type="checkbox" name="Locale[]" {% if languageCode == tag.mainLanguageCode %}disabled="disabled"{% endif %} id="{{ languageCode }}" value="{{ languageCode }}"/><label for="{{ languageCode }}"></label></td>
                {% if languageCode == tag.mainLanguageCode %}
                    <td><strong>{{ netgen_tags_language_name(languageCode) }}</strong></td>
                {% else %}
                    <td>{{ netgen_tags_language_name(languageCode) }}</td>
                {% endif %}
                <td>{{ keyword }}</td>
                <td>{{ languageCode }}</td>
                <td><input type="radio" name="MainLocale" id="{{ languageCode }}" value="{{ languageCode }}" {% if languageCode == tag.mainLanguageCode %}checked="checked"{% endif %}/><label for="{{ languageCode }}"></label></td>
                <td><a href="{{ path('netgen_tags_admin_tag_update', {'tagId': tag.id, 'languageCode': languageCode}) }}">{{ 'tag.button.edit'|trans }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('eztags_admin') }}" />
    <div class="tags-btn-group">
        <input type="submit" class="tags-btn" name="RemoveTranslationButton" value="{{ 'tag.button.remove'|trans }}"/>
        <input type="submit" class="tags-btn" name="UpdateMainTranslationButton" value="{{ 'tag.button.main'|trans }}"/>
    </div>
    <input type="checkbox" name="AlwaysAvailable" id="AlwaysAvailable" {% if tag.alwaysAvailable %}checked="checked"{% endif %}/><label for="AlwaysAvailable">{{ 'tag.form.always_available'|trans }}.</label>
    <input type="submit" class="tags-btn tags-btn-primary" name="UpdateAlwaysAvailableButton" value="{{ 'tag.button.update'|trans }}"/>
</form>
