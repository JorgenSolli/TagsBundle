{% extends eztags_admin.pageLayoutTemplate %}

{% trans_default_domain 'eztags_admin' %}

{% block content %}
    {# Show confirmation message, table with selected tags and form for deleting selected multiple tags. #}
    <h2>{{ 'tag.delete_tags.title'|trans }}</h2>

    <p>{{ 'tag.delete_tags.message'|trans }}</p>

    <form method="post" action="{{ path('netgen_tags_admin_tag_children_delete', {'tagId': parentTag is defined ? parentTag.id : 0}) }}">
        <table>
            <thead>
                <tr>
                    <th>{{ 'tag.title'|trans }}</th>
                </tr>
            </thead>

            <tbody>
            {% for tag in tags %}
                <tr>
                    <td>
                        <input type="hidden" name="Tags[]" value="{{ tag.id }}"/>
                        {% if parentTag is defined %}{{ parentTag.keyword }} / {% endif %}{{ tag.keyword }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('eztags_admin') }}" />
        <input type="submit" name="DeleteTagsButton" value="{{ 'tag.button.yes'|trans }}"/>
    </form>

    <a href="
        {% if parentTag is defined %}
            {{ path('netgen_tags_admin_tag_show', {'tagId': parentTag.id}) }}
        {% else %}
            {{ path('netgen_tags_admin_dashboard_index') }}
        {% endif %}
     " class="button">{{ 'tag.button.no'|trans }}</a>
{% endblock %}
