{% extends eztags_admin.pageLayoutTemplate %}

{% trans_default_domain 'eztags_admin' %}

{% form_theme form 'NetgenTagsBundle:form:eztags.html.twig' %}

{% block content %}
    {# Show confirmation message, table with selected tags and form for moving selected multiple tags to new parent. #}
    <h2 class="tag-title">{{ 'tag.move_tags.title'|trans }}</h2>

    <p>{{ 'tag.move_tags.message'|trans }}</p>

    {{ form_start(form) }}

    <table>
        <thead>
            <tr>
                <th>{{ 'tag.title'|trans }}</th>
            </tr>
        </thead>

        <tbody>
        {% for tag in tags %}
            <tr>
                <td>
                    <input type="hidden" name="Tags[]" value="{{ tag.id }}"/>
                    {% if parentTag is defined %}{{ parentTag.keyword }} / {% endif %}{{ tag.keyword }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ form_errors(form) }}

    {{ form_row(form.parentTag, {'tag': parentTag is defined ? parentTag : null}) }}

    <div class="tags-actions">
        <button type="submit" class="tags-btn tags-btn-primary">{{ 'tag.button.save'|trans }}</button>

        {% if parentTag is defined %}
            {% set discardLink = path('netgen_tags_admin_tag_show', {'tagId': parentTag.id}) %}
        {% else %}
            {% set discardLink = path('netgen_tags_admin_dashboard_index') %}
        {% endif %}

        <a href="{{ discardLink }}" class="tags-btn">{{ 'tag.button.discard'|trans }}</a>
    </div>

    {{ form_end(form) }}

{% endblock %}
