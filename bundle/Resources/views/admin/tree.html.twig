{% trans_default_domain 'eztags_admin' %}

{% set rootTagId = rootTagId|default(0) %}
{% set showRootTag = showRootTag|default(true) %}
{% set selectedTag = selectedTag|default(null) %}
{% set disableSubtree = disableSubtree|default([]) %}

{% block tags_tree %}
    <div
        class="ng-ui-tree"
        data-path="{{ path('netgen_tags_admin_tree_get_children', {'tagId': '_itemId_'}) }}"
        data-rootItemId="{{ rootTagId }}"
        data-showRootItem="{{ showRootTag ? 'true' : 'false' }}"
        data-selectedItemPath="{{ selectedTag ? selectedTag.pathString : '' }}"
        data-disableSubtree="{{ disableSubtree|join(',') }}"
    ></div>
{% endblock %}
