{% extends eztags_admin.pageLayoutTemplate %}

{% trans_default_domain 'eztags_admin' %}

{% form_theme form '@NetgenTags/form/eztags.html.twig' %}

{% block content %}
    {% if tag is defined %}
        <h2 class="ng-ui-title">{{ 'tag.edit.title'|trans }}: {{ netgen_tags_tag_keyword(tag) }} [{{ tag.id }}]</h2>
    {% else %}
        <h2 class="ng-ui-title">{{ 'tag.add.title'|trans }}</h2>
    {% endif %}

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <button class="ng-ui-btn ng-ui-btn-primary" type="submit">{{ 'tag.button.continue'|trans }}</button>
    {{ form_end(form) }}
{% endblock %}
