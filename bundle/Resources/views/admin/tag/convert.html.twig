{% extends eztags_admin.pageLayoutTemplate %}

{% trans_default_domain 'eztags_admin' %}

{% form_theme form '@NetgenTags/form/eztags.html.twig' %}

{% block content %}
    <h2 class="ng-ui-title">{{ 'tag.convert.title'|trans }}: {{ netgen_tags_tag_keyword(tag) }} [{{ tag.id }}]</h2>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="ng-ui-actions">
            <button type="submit" class="ng-ui-btn ng-ui-btn-primary">{{ 'tag.button.save'|trans }}</button>
            <a href="{{ path('netgen_tags_admin_tag_show', {'tagId': tag.id}) }}" class="ng-ui-btn">{{ 'tag.button.discard'|trans }}</a>
        </div>
    {{ form_end(form) }}
{% endblock %}
