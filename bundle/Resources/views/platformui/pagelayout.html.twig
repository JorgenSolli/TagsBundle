{% trans_default_domain 'eztags_admin' %}

<div data-name="title">
    {% block title %}
        {{ 'pagelayout.title'|trans }}
    {% endblock %}
</div>

<div data-name="html">
    <div class="ng-tags-app">
        {% include '@NetgenTags/admin/header.html.twig' %}

        <section class="ng-ui-container">
            <div class="ng-ui-sidebar ng-ui-sidebar-resizable">
                <div class="main-menu">
                    {% include '@NetgenTags/admin/main_menu.html.twig' %}
                </div>
            </div>

            <div class="ng-ui-content">
                <div class="path">
                    {% include '@NetgenTags/admin/path.html.twig' %}
                </div>

                {% block content %}{% endblock %}
            </div>
        </section>
    </div>
</div>
